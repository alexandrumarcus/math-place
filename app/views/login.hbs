<div class="container">
  <div class="row login-component">
    <div class="col-12">
      <form action="/login" class="login-form form-group row" method="post" autocomplete="anyrandomstring">
        <div class="form-label-group">
          <input type="email" id="inputEmail" name="username" class="form-control" placeholder="Email address" tabindex="1"
            >
          <label for="inputEmail">Email</label>
        </div>
        <div class="form-label-group">
          <input type="password" id="inputPassword" name="password" class="form-control" placeholder="pw" tabindex="1" autocomplete="new-password">
          <label for="inputPassword">Password</label>
          <i class="fas fa-eye icon-pw" id="showPassword"></i>
        </div>
        <button class="btn btn-primary btn-block" type="submit">Login</button>
        <a href="./register" class="btn btn-secondary btn-lg btn-block">Create account</a>
      </form>
      {{title}}
    </div>
  </div>
</div>