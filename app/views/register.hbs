<div class="container">
  <div class="row login-component">
    <div class="col-12">
      <form action="auth" class="login-form form-group row" method="post">
        <h1>{{user}}</h1>
        <div class="form-label-group">
          <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required=""
            autofocus="" autocomplete="off">
          <label for="inputEmail">Email</label>
        </div>
        <div class="form-label-group">
          <input type="password" id="inputPassword" name="pw" class="form-control" placeholder="pw"
            required="" autofocus="" autocomplete="off">
          <label for="inputPassword">Password</label>
          <i class="fas fa-eye icon-pw" id="showPassword"></i>
        </div>
        <button class="btn btn-primary btn-block" type="submit">Register</button>
      </form>
    </div>
  </div>
</div>